<p id="notice"><%= notice %></p>

<h1>Proposer votre jardin</h1>

<br>

<%= link_to 'New Path', new_path_path, class: "btn btn-primary pull-right" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Descrition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paths.each do |path| %>
      <tr>
        <td><%= path.title %></td>
        <td><%= path.descrition %></td>
        <td><%= link_to 'Show', path %></td>
        <td><%= link_to 'Edit', edit_path_path(path) %></td>
        <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


